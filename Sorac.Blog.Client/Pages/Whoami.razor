        style="height: @(_progressHeight)em; background-color: var(--color-on-container); transition: height 0.3s ease-in-out;">
        <div class="progress-bar"
            style="width: @_progress%; background-color: var(--color-primary); transition: width 0.5s ease-in-out;" />
    </div>
</div>

