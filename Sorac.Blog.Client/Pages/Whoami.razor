<hr />

<div class="m-3">
    <img src="@Assets["img/whoami_1.webp"]" class="img-fluid rounded" alt="whoami" @onload="OnImageLoaded" />
</div>

@code {
    private float _progressHeight = 0.5f;
    private int _progress = 0;
    private async void OnImageLoaded()
    {
        _progress = 100;
        await Task.Delay(500);
        _progressHeight = 0f;
        Console.WriteLine("ImageLoaded");
        StateHasChanged();
    }
}
